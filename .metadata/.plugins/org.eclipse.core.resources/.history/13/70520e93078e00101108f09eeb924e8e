package DashBoard;

import java.io.FileWriter;
import java.io.IOException;
import java.io.PrintWriter;
import java.util.ArrayList;


public class FileWiter {
		 public static void main(String[] args) {
		        // 다른 클래스에서 리스트 가져오기
		        ArrayList<Board> list = Arr.getBoardList();

		        // CSV 파일로 저장
		        CsvWriter.saveToCsv(list, "src/DataBase/data.csv");
		    }
		

    public static void saveListToFile(ArrayList<Board> list, String filePath) {
        try (FileWriter fw = new FileWriter(filePath);
             PrintWriter pw = new PrintWriter(fw)) {

            for (Board board: list) {
                pw.println(board); // toString() 자동 호출 → CSV 형태
            }

            System.out.println(filePath + " 파일에 저장");
        } catch (IOException e) {
            e.printStackTrace();
        }
    }
	
}



