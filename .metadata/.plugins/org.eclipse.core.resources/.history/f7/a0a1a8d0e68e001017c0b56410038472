        String strListChoice = sc.next();

        try {
            int intListChoice = Integer.parseInt(strListChoice);

            if (intListChoice == 1) {
                System.out.println("\nğŸ“‹ ì „ì²´ ê²Œì‹œê¸€ ëª©ë¡\n");
