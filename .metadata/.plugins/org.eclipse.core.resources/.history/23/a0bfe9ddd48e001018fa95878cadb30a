    public static void initFile() {
        try {
            // í´ë” ìƒì„±
            File folder = new File("DataBase");
            if (!folder.exists()) {
                folder.mkdirs();
                System.out.println("í´ë” ìƒì„±ë¨: " + folder.getAbsolutePath());
            }

            // íŒŒì¼ ìƒì„±
