package DashBoard;

import java.io.FileWriter;
import java.io.IOException;
import java.io.PrintWriter;
import java.util.ArrayList;


public class SavaFile {
		 public static void main(String[] args) {
		        // 다른 클래스에서 리스트 가져오기
		        ArrayList<Board> list = Arr.getBoardList();

		        // CSV 파일로 저장
		        SaveFile.saveFile(list, "src/DataBase/data.csv");
		    }
		

    public static void saveFile(ArrayList<Board> list, String filePath) {
        try (FileWriter fw = new FileWriter(filePath,true);
             PrintWriter pw = new PrintWriter(fw)) {

            for (int i=0;i<list.size();i++) {
                pw.println(list.get(i).toCSV()); 
            }

            System.out.println(filePath + " 파일에 저장");
        } catch (IOException e) {
            e.printStackTrace();
        }
    }
	
}



